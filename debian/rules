#!/usr/bin/make -f

# export DH_VERBOSE = 1

%:
	dh $@ --buildsystem=cmake --with=python3

override_dh_test:


override_dh_auto_test:

override_dh_auto_build:
	dh_auto_build

override_dh_auto_install:
	dh_auto_install
	cd analysis && python3 setup.py install --install-layout=deb --root=$(CURDIR)/debian/oxdna
	cd obj-${DEB_HOST_GNU_TYPE}/oxpy/python/oxpy && python3 setup.py install --root=$(CURDIR)/debian/oxdna --install-layout=deb

override_dh_auto_configure:
	dh_auto_configure -- -DCUDA=ON -DPython=ON -DCMAKE_SKIP_RPATH=ON -DG=ON -DCUDA_COMMON_ARCH=ON -DNATIVE_COMPILATION=OFF

